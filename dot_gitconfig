[core]
    excludesfile = ~/.gitignore
    pager = less --quit-if-one-screen --no-init

[init]
    defaultbranch = master

[pull]
    rebase = true

[push]
    default = simple
    autosetupremote = true

[color]
    ui = auto

[alias]
    unpushed = log origin/master..HEAD --oneline --no-decorate

[include]
    path = ~/.gitconfig_local
